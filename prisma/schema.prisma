generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model User {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
}

model Post {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  title String
}

model Document {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String
}

model Chunk {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  content String
}

model Query {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  question String
}
